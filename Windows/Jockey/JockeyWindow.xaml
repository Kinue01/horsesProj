<Window x:Class="horsesProj.Windows.Jockey.JockeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:horsesProj.Windows.Jockey"
        mc:Ignorable="d"
        Title="JockeyWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".1*" />
            <ColumnDefinition Width=".4*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button VerticalAlignment="Top" Content="Назад" Click="Button_Click" />

        <Image Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Source="../../Image/jockey.jpg" />

        <UniformGrid Rows="4" Columns="2" Grid.Column="2">
            <Button VerticalAlignment="Center" HorizontalAlignment="Center" Content="Ввод и редактирование информации о жокее" Click="Button_Click_1" />
            <Button VerticalAlignment="Center" HorizontalAlignment="Center" Content="Ввод и редактирование информации о лошадях" Click="Button_Click_2" />
            <Button VerticalAlignment="Center" HorizontalAlignment="Center" Content="Регистрация на участие в заезде" Click="Button_Click_3" />
            <Button VerticalAlignment="Center" HorizontalAlignment="Center" Content="Просмотр информации об участниках заезда" Click="Button_Click_4" />
            <Button VerticalAlignment="Center" HorizontalAlignment="Center" Content="Просмотр результатов заезда" Click="Button_Click_5" />
        </UniformGrid>
    </Grid>
</Window>
