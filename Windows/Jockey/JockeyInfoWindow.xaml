<Window x:Class="horsesProj.Windows.Jockey.JockeyInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:horsesProj.Windows.Jockey"
        mc:Ignorable="d"
        Title="JockeyInfoWindow" Height="450" Width="800">
    <UniformGrid>
        <StackPanel VerticalAlignment="Center" Margin="5">
            <TextBlock Text="ФИО" />
            <TextBox x:Name="fio" />
        </StackPanel>
        <StackPanel VerticalAlignment="Center" Margin="5">
            <TextBlock Text="Вес" />
            <TextBox x:Name="weight" />
        </StackPanel>
        <Button Content="ОК" VerticalAlignment="Center" Margin="5" Click="Button_Click_1" />
        <Button Content="Отмена" VerticalAlignment="Center" Margin="5" Click="Button_Click" />
    </UniformGrid>
</Window>
